{
  "workbench.colorTheme": "Solarized Light+",
  "editor.inlineSuggest.enabled": true,
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum', 'calt'",
  "editor.fontFamily": "Cascadia Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "files.autoSave": "onFocusChange",
  "terminal.integrated.defaultProfile.osx": "bash",
  "debug.console.fontSize": 14,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "rust": false
  },
  "terminal.integrated.fontSize": 16,
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.autoClosingBrackets": "never",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.confirmDragAndDrop": false,
  "[crystal]": {
    "editor.defaultFormatter": "crystal-lang-tools.crystal-lang"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "tabnine.experimentalAutoImports": true,
  "editor.formatOnSave": true,
  "output.smartScroll.enabled": false,
  "crystal-lang.completion": true,
  "crystal-lang.hover": true,
  "crystal-lang.implementations": true,
  "crystal-lang.compiler": "/opt/homebrew/bin/crystal",
  "crystal-lang.shards": "/opt/homebrew/bin/shards",
  "crystal-lang.server": "/opt/homebrew/bin/crystalline",
  "editor.rulers": [],
  "[factor]": {
    "editor.rulers": [64]
  },
  "files.watcherExclude": {
    "**/target/**": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "npx jest test/integration/role-poisoning.spec.ts -t \"should demonstrate actual role poisoning\" --no-coverage": {
      "approve": true,
      "matchCommandLine": true
    }
  },
  "terminal.integrated.suggest.enabled": false
}
